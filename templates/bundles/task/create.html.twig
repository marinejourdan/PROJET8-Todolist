{% extends 'base.html.twig' %}
{% block header_title %}<h1>Créer une tâche</h1>{% endblock %}
{% block body %}
    <div class="row">
        {{ form_start(form, {'action' : path('task_create')}) }}
            {{ form_widget(form) }}

            <input type="submit" value='Ajouter' class="btn btn-success pull-right">
        {{ form_end(form) }}

        <a href="{{ path('task_list') }}" class="btn btn-primary">Retour à la liste des tâches</a>
    </div>
{% endblock %}
